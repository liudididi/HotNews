<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qjbg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/re_tou1"
        >
        <ImageView
            android:id="@+id/img_q"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="152dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_q"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="120dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/re_tou"
        android:background="#505050"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="4"
            >
            <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/phone"
            />

            <ImageView
                android:id="@+id/img_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/qq01"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/weixin1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/weibo"
                />
        </LinearLayout>
        <Button
            android:id="@+id/bt_denglu"
            android:background="@drawable/tv_bk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="更多登录方式 >"
            android:textSize="15dp"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#cacaca"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/re_tou"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/star" />

            <TextView
                android:textColor="@color/zi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/time" />

            <TextView
                android:textColor="@color/zi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="历史"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/img_yue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/yue"
                />

            <TextView
                android:id="@+id/tv_yue"
                android:textColor="@color/zi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/re_tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        android:id="@+id/linearLayout">
    </LinearLayout>

    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="我的关注"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@mipmap/live"
        android:layout_above="@+id/textView2"
        android:layout_toLeftOf="@+id/textViewa"
        android:layout_toStartOf="@+id/textViewa" />
    <TextView
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="12dp"
        android:paddingRight="50dp"
        android:text="我的直播  >"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textViewa"
        android:gravity="right"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:layout_marginTop="2dp"
        android:text="消息通知"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="头条商城"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="11dp"
        android:text="邀请好友得现金红包  >"
        android:textSize="20dp"
        android:id="@+id/textViewd"
        android:paddingRight="50dp"
        android:textColor="#bfbfbf"
        android:gravity="right"
        android:layout_toRightOf="@+id/textView3"
        android:layout_above="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="11dp"
        android:text="新人领188元红包  >"
        android:textSize="20dp"
        android:id="@+id/textViewdf"
        android:paddingRight="50dp"
        android:textColor="#bfbfbf"
        android:gravity="right"
        android:layout_toRightOf="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="京东特供"
        android:textSize="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="我要爆料"
        android:textSize="25dp"
        android:layout_marginTop="11dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="用户反馈"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/textView5"
        android:id="@+id/textView7" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="9dp"
        android:text="系统设置"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
