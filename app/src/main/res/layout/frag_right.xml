<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f6"
    >
    <TextView
        android:id="@+id/tv_shezhi"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:text="设置"
        android:textSize="25dp"
        android:gravity="center"
     />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="清除缓存"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_shezhi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="字体大小"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="2dp"
        android:text="列表显示摘要"
        android:textSize="25dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="2dp"
        android:text="非WiFi网络流量"
        android:textSize="25dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="2dp"
        android:text="非WiFi网络播放提醒"
        android:textSize="25dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView13" />
    <TextView
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="推送通知"
        android:textSize="25dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="18dp"
        android:text="离线下载"
        android:textSize="25dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12" />
    <TextView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="2dp"
        android:text="版本检查"
        android:textSize="25dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView14" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="今日头条用户协议"
        android:textColor="#4E8BB6"
        android:textStyle="bold"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:id="@+id/textView15" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16dp"
    android:text="©头条网 toutiao.com"
    android:layout_below="@+id/textView15"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="17dp"
    android:gravity="center"
    android:id="@+id/textView16" /><TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16dp"
    android:text="v6.3.2 Build 385a 104_20170817"
    android:gravity="center"
    android:layout_below="@+id/textView16"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />
</RelativeLayout>
