<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qjbg"
    >
    <TextView
        android:id="@+id/tv_shezhi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:text="设置"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/zi"
     />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="清除缓存"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_shezhi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:text="8.6M"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/textView8"
        android:layout_above="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="字体大小"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9" />
    <TextView
        android:textColor="@color/zi"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="中"
        android:textSize="20dp"
        android:gravity="right"
        android:layout_toRightOf="@+id/textView9"
        android:layout_above="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView20" />
    <TextView
        android:background="@color/bg"
        android:textColor="@color/zi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="列表显示摘要"
        android:textSize="25dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_toLeftOf="@+id/img_liebiao"
         />
    <Switch

        android:id="@+id/img_liebiao"
        android:background="@color/bg"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/guan"
        android:layout_below="@+id/textView20"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="非WiFi网络流量"
        android:textColor="@color/zi"
        android:textSize="25dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_network" />
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="非WiFi网络播放提醒"
        android:textColor="@color/zi"
        android:textSize="25dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/tv_network"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="推送通知"
        android:textSize="25dp"
        android:textColor="@color/zi"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView13"
        android:layout_toLeftOf="@+id/img_tui"
        android:layout_toStartOf="@+id/img_tui" />
    <Switch
        android:id="@+id/img_tui"
        android:background="@color/bg"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:layout_marginTop="17dp"
        android:text="离线下载"
        android:textSize="25dp"
        android:textColor="@color/zi"
        android:id="@+id/tv_lixian"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="@color/bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingTop="8dp"
        android:text="版本检查"
        android:textSize="25dp"
        android:textColor="@color/zi"
        android:id="@+id/textView14"
        android:layout_below="@+id/tv_lixian"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:text="6.3.2"
        android:textSize="20dp"
        android:gravity="right"
        android:textColor="@color/zi"
        android:layout_toRightOf="@+id/textView14"
        android:layout_below="@+id/tv_lixian"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView21" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="今日头条用户协议"
            android:textColor="#4E8BB6"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/textView15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="©头条网 toutiao.com"
            android:textColor="@color/zi"
            android:layout_below="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:id="@+id/textView16" />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="v6.3.2 Build 385a 104_20170817"
            android:textColor="@color/zi"
        android:gravity="center"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    </RelativeLayout>
</RelativeLayout>
